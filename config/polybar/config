format-muted-prefix-foreground = ${colors.bright-green}
label-muted = "%percentage%% "
label-muted-padding = 0
format-prefix = "Volume: "

[module/time]
type = custom/script
exec = date '+%d/%m/%Y %H:%M:%S'
click-left = thunderbird &
label = "%output%"
interval = 5

[module/battery]
