[module/pacman-packages]
type = custom/ipc
hook-0 = sudo pacman -Qu | wc -l
format-prefix = " "
initial = 1

[module/memory]
type = internal/memory
label = "%percentage_used%%"
click-left = $TERMINAL -e htop &
interval = 10
format-prefix = " "

[module/cpu-usage]
type = internal/cpu
format = <label>
label = "%percentage%%"
label-padding = 1
click-left = $TERMINAL -e htop &
interval = 2
format-prefix = "CPU: "

[module/volume]
type = internal/alsa
